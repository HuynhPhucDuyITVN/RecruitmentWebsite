@model RecruitFlow.Models.GhiChuAdmin

@{
    ViewData["Title"] = "Create";
}

<h1>Thêm ghi chú</h1>

<h4>Thông tin ghi chú</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UngVienId" class="control-label"></label>
                <select asp-for="UngVienId" class ="form-control" asp-items="ViewBag.UngVienId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TinTuyenDungId" class="control-label"></label>
                <select asp-for="TinTuyenDungId" class ="form-control" asp-items="ViewBag.TinTuyenDungId"></select>
            </div>
            <div class="form-group">
                <label asp-for="NguoiTaoId" class="control-label"></label>
                <select asp-for="NguoiTaoId" class ="form-control" asp-items="ViewBag.NguoiTaoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="GhiChu" class="control-label"></label>
                <input asp-for="GhiChu" class="form-control" />
                <span asp-validation-for="GhiChu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay về</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
