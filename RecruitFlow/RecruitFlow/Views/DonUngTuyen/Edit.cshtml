@model RecruitFlow.Models.DonUngTuyen

@{
    ViewData["Title"] = "Edit";
}

<h1>Chỉnh sửa</h1>

<h4>Đơn ứng tuyển</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DonUngTuyenId" />
            <div class="form-group">
                <label asp-for="TinTuyenDungId" class="control-label"></label>
                <select asp-for="TinTuyenDungId" class="form-control" asp-items="ViewBag.TinTuyenDungId"></select>
                <span asp-validation-for="TinTuyenDungId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UngVienId" class="control-label"></label>
                <select asp-for="UngVienId" class="form-control" asp-items="ViewBag.UngVienId"></select>
                <span asp-validation-for="UngVienId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cvurl" class="control-label"></label>
                <input type="file" name="file" class="form-control-file" />
                <input  type="hidden" asp-for="Cvurl" class="form-control" />
                <span asp-validation-for="Cvurl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ThuXinViec" class="control-label"></label>
                <input asp-for="ThuXinViec" class="form-control" />
                <span asp-validation-for="ThuXinViec" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrangThai" class="control-label"></label>
                <select asp-for="TrangThai" class="form-control" asp-items="ViewBag.TrangThaiList"></select>
                <span asp-validation-for="TrangThai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay lại</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
